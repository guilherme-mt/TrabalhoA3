Códigos A3
package com.mycompany.interfacegraficaa3;

import javax.swing.*;
import java.awt.*;
import java.awt.event.*;
import java.sql.*;

public class InterfaceGraficaA3 extends JFrame implements ActionListener {
    private JTextField campoUsuario;
    private JPasswordField campoSenha;
    private JButton botaoLogin;
    private Connection conexao;

    public InterfaceGraficaA3() {
        setTitle("Tela de Login");
        setSize(300, 150);
        setDefaultCloseOperation(EXIT_ON_CLOSE);
        setResizable(false);

        conectarBanco();

        JPanel painel = new JPanel();
        painel.setLayout(new GridLayout(3, 2));

        JLabel labelUsuario = new JLabel("Usuário:");
        campoUsuario = new JTextField();
        JLabel labelSenha = new JLabel("Senha:");
        campoSenha = new JPasswordField();
        botaoLogin = new JButton("Login");
        botaoLogin.addActionListener(this);

        painel.add(labelUsuario);
        painel.add(campoUsuario);
        painel.add(labelSenha);
        painel.add(campoSenha);
        painel.add(new JLabel());
        painel.add(botaoLogin);

        add(painel);
        setLocationRelativeTo(null);
        setVisible(true);
    }

    private void conectarBanco() {
        try {
            String url = "jdbc:mysql://localhost:3306/interfacegraficaa3";
            String usuario = "admin";
            String senha = "admmin"; 

            conexao = DriverManager.getConnection(url, usuario, senha);
            System.out.println("Conexão estabelecida com sucesso.");
        } catch (SQLException e) {
            System.out.println("Erro ao conectar ao banco de dados: " + e.getMessage());
        }
    }

    public void actionPerformed(ActionEvent e) {
        if (e.getSource() == botaoLogin) {
            String usuario = campoUsuario.getText();
            String senha = new String(campoSenha.getPassword());
            verificarLogin(usuario, senha);
        }
    }

    private void verificarLogin(String usuario, String senha) {
        try {
            String consulta = "SELECT * FROM usuarios WHERE login = ? AND senha = ?";
            PreparedStatement pstmt = conexao.prepareStatement(consulta);
            pstmt.setString(1, usuario);
            pstmt.setString(2, senha);
            ResultSet resultado = pstmt.executeQuery();

            if (resultado.next()) {
                JOptionPane.showMessageDialog(this, "Login bem-sucedido!");
                new TelaInformacoes(conexao); 
            } else {
                JOptionPane.showMessageDialog(this, "Usuário ou senha incorretos.");
            }

            resultado.close();
            pstmt.close();
        } catch (SQLException ex) {
            System.out.println("Erro ao verificar login: " + ex.getMessage());
        }
    }

    public static void main(String[] args) {
        SwingUtilities.invokeLater(new Runnable() {
            public void run() {
                new InterfaceGraficaA3();
            }
        });
    }
}

package com.mycompany.interfacegraficaa3;

import javax.swing.*;
import java.awt.*;
import java.sql.*;

public class TelaInformacoes extends JFrame {
    private Connection conexao;

    public TelaInformacoes(Connection conexao) {
        this.conexao = conexao;
        setTitle("Informações");
        setSize(600, 600); 
        setDefaultCloseOperation(EXIT_ON_CLOSE);
        setResizable(false);

        JPanel painel = new JPanel();
        painel.setLayout(new BorderLayout());

        JTextArea areaTexto = new JTextArea();
        areaTexto.setEditable(false);

        JScrollPane scrollPane = new JScrollPane(areaTexto);
        painel.add(scrollPane, BorderLayout.CENTER);

        add(painel);
        setLocationRelativeTo(null);
        setVisible(true);

        carregarInformacoes(areaTexto);
    }

    private void carregarInformacoes(JTextArea areaTexto) {
        areaTexto.append("\n\nPoluição da Água\n");
        areaTexto.append("Explicação:\n");
        areaTexto.append("A poluição da água é causada pela introdução de substâncias nocivas, como produtos químicos, resíduos industriais, esgoto, plásticos e outros poluentes, nos corpos d'água. Isso pode prejudicar a vida aquática, afetar a saúde humana e danificar os ecossistemas marinhos.\n\n");
        areaTexto.append("Soluções:\n");
        areaTexto.append("1. Tratamento de Efluentes: Implementar e melhorar as instalações de tratamento de esgoto e resíduos industriais para remover contaminantes antes de serem descartados nos corpos d'água.\n");
        areaTexto.append("2. Redução de Plásticos: Promover a redução do uso de plásticos descartáveis e aumentar a reciclagem para minimizar a poluição por plásticos.\n");
        areaTexto.append("3. Legislação: Estabelecer e fazer cumprir leis rigorosas que regulam a descarga de poluentes nas águas.\n");
        areaTexto.append("4. Educação e Conscientização: Implementar campanhas de educação pública para aumentar a conscientização sobre a importância de manter a água limpa.\n");

        areaTexto.append("\n\nDegradação do Habitat\n");
        areaTexto.append("Explicação:\n");
        areaTexto.append("A degradação do habitat marinho ocorre devido a atividades humanas como pesca excessiva, construção costeira, mineração submarina e poluição, que destroem ou alteram os habitats naturais, prejudicando a biodiversidade.\n\n");
        areaTexto.append("Soluções:\n");
        areaTexto.append("1. Áreas Marinhas Protegidas (AMPs): Estabelecer AMPs para proteger habitats críticos e permitir a recuperação das populações de espécies marinhas.\n");
        areaTexto.append("2. Pesca Sustentável: Implementar práticas de pesca sustentável que minimizem os impactos nos ecossistemas marinhos e evitem a sobrepesca.\n");
        areaTexto.append("3. Recuperação de Habitats: Realizar projetos de restauração de habitats, como recifes de corais e manguezais, para recuperar áreas degradadas.\n");
        areaTexto.append("4. Regulação e Fiscalização: Aumentar a regulação e fiscalização das atividades humanas que impactam negativamente os habitats marinhos.\n");

        areaTexto.append("\n\nMonitoramento da Saúde dos Ecossistemas Marinhos\n");
        areaTexto.append("Explicação:\n");
        areaTexto.append("O monitoramento da saúde dos ecossistemas marinhos envolve a coleta e análise de dados sobre a qualidade da água, populações de espécies, e estado dos habitats para avaliar o impacto das atividades humanas e a eficácia das medidas de conservação.\n\n");
        areaTexto.append("Soluções:\n");
        areaTexto.append("1. Tecnologia e Inovação: Utilizar tecnologias avançadas, como sensores subaquáticos, satélites e drones, para monitorar os ecossistemas marinhos de forma eficiente e em tempo real.\n");
        areaTexto.append("2. Programas de Monitoramento: Estabelecer programas de monitoramento regulares e abrangentes para coletar dados consistentes e de longo prazo.\n");
        areaTexto.append("3. Colaboração Internacional: Promover a cooperação internacional para o compartilhamento de dados e melhores práticas na conservação marinha.\n");
        areaTexto.append("4. Participação Comunitária: Envolver as comunidades locais no monitoramento e conservação dos ecossistemas marinhos, aproveitando o conhecimento tradicional e promovendo a responsabilidade ambiental.\n");

        areaTexto.append("\n\nEstas ações, quando implementadas de forma conjunta e integrada, podem ajudar a mitigar os problemas relacionados à poluição da água, degradação do habitat e monitoramento da saúde dos ecossistemas marinhos, promovendo a sustentabilidade e a preservação dos ambientes marinhos.\n");
    }
}

CREATE DATABASE IF NOT EXISTS interfacegraficaa3;
USE interfacegraficaa3;

CREATE TABLE IF NOT EXISTS usuarios (
    id INT AUTO_INCREMENT PRIMARY KEY,
    login VARCHAR(100) NOT NULL,
    senha VARCHAR(45) NOT NULL
);

INSERT INTO usuarios (login, senha) VALUES ('admin', 'admin');

CREATE TABLE IF NOT EXISTS cursos (
    id INT AUTO_INCREMENT PRIMARY KEY,
    nome VARCHAR(200) NOT NULL,
    tipo TEXT NOT NULL
);

