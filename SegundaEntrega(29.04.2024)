package com.mycompany.interfacegraficaa3;

import javax.swing.*;
import java.awt.*;
import java.awt.event.*;

public class InterfaceGraficaA3 extends JFrame implements ActionListener {
    private JTextField campoUsuario;
    private JPasswordField campoSenha;
    private JButton botaoLogin;

    public InterfaceGraficaA3() {
        setTitle("Tela de Login");
        setSize(300, 150);
        setDefaultCloseOperation(EXIT_ON_CLOSE);
        setResizable(false);

        JPanel painel = new JPanel();
        painel.setLayout(new GridLayout(3, 2));

        JLabel labelUsuario = new JLabel("Usuário:");
        campoUsuario = new JTextField();
        JLabel labelSenha = new JLabel("Senha:");
        campoSenha = new JPasswordField();
        botaoLogin = new JButton("Login");
        botaoLogin.addActionListener(this);

        painel.add(labelUsuario);
        painel.add(campoUsuario);
        painel.add(labelSenha);
        painel.add(campoSenha);
        painel.add(new JLabel());
        painel.add(botaoLogin);

        add(painel);
        setLocationRelativeTo(null);
        setVisible(true);
    }

    public void actionPerformed(ActionEvent e) {
        if (e.getSource() == botaoLogin) {
            String usuario = campoUsuario.getText();
            String senha = new String(campoSenha.getPassword());
            JOptionPane.showMessageDialog(this, "Usuário: " + usuario + "\nSenha: " + senha);
        }
    }

    public static void main(String[] args) {
        SwingUtilities.invokeLater(new Runnable() {
            public void run() {
                new InterfaceGraficaA3();
            }
        });
    }
}
